{% extends 'reset_password/base.html.twig' %}

{% block title %}Rénitialisation de mot de passe{% endblock %}
{% block stylesheets_extra %}
    {{ encore_entry_link_tags('reset') }} {# Inclut le CSS spécifique à la page de login #}
{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="block-form text-center p-3">
        <h1>Changement de mot de passe</h1>
        <div class="form-group">
            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email,{
                'label_attr': {'class': 'me-3'}}) }}
                <div>
                    <small>
                        Entrez votre email pour réinitialiser votre email.
                    </small>
                </div>

                <button class="btn btn-primary mt-3">Envoyez</button>
        </div>
    </div>
    {{ form_end(requestForm) }}
{% endblock %}
