{# templates/base.html.twig (votre template de base global pour tout le site) #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Mon Site{% endblock %}</title>

   
    {{ encore_entry_link_tags('app') }} {# Votre CSS principal #}

    {# CE BLOC EST LA CLÉ : Il permettra aux templates enfants d'ajouter des choses au head #}
    {% block stylesheets_extra %}
        {# Les templates enfants pourront utiliser ce bloc pour ajouter des feuilles de style supplémentaires #}
    {% endblock %}

</head>
<body>
    {# ... votre layout global (header, nav, footer, etc.) ... #}

    <main>{% block body %}{% endblock %}</main>

    {# Incluez ici les scripts globaux (Bootstrap JS, votre app.js, etc.) #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5LwKsyjpHhTWT56T8WWrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"></script>
    {{ encore_entry_script_tags('app') }} {# Votre JS principal #}

    {# Autre bloc pour les scripts spécifiques si nécessaire #}
    {% block javascripts_extra %}
    {% endblock %}
</body>
</html>